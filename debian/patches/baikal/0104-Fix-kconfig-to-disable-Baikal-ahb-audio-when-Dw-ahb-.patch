Subject: [PATCH 104/113] Fix kconfig to disable Baikal ahb audio when Dw ahb
 audio is enabled

---
 drivers/gpu/drm/bridge/synopsys/Kconfig | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/drivers/gpu/drm/bridge/synopsys/Kconfig b/drivers/gpu/drm/bridge/synopsys/Kconfig
index 2f914d45755e..2f97f25020a6 100644
--- a/drivers/gpu/drm/bridge/synopsys/Kconfig
+++ b/drivers/gpu/drm/bridge/synopsys/Kconfig
@@ -49,7 +49,7 @@ config DRM_BAIKAL_HDMI
 
 config DRM_BAIKAL_HDMI_AHB_AUDIO
 	tristate "Baikal-M HDMI Audio interface"
-	depends on DRM_BAIKAL_HDMI && SND
+	depends on DRM_BAIKAL_HDMI && SND && (DRM_DW_HDMI_AHB_AUDIO != y && DRM_DW_HDMI_AHB_AUDIO != m)
 	default m if ARCH_BAIKAL
 	select SND_PCM
 	select SND_PCM_ELD
